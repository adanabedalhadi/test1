<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/FramlayoutMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnLoginMain"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="73dp"
                android:layout_marginEnd="61dp"
                android:layout_marginBottom="45dp"
                android:onClick="LOGIN"
                android:text="login"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnSignupMain"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnSignupMain"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="68dp"
                android:onClick="SingUp"
                android:text="signup"
                app:layout_constraintBottom_toBottomOf="@+id/btnLoginMain"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnLoginMain"
                app:layout_constraintTop_toTopOf="@+id/btnLoginMain" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>